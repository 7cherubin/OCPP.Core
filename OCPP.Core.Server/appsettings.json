{
  "Logging": {
    "File": {
      "BasePath": "Logs",
      "FileAccessMode": "KeepOpenAndAutoFlush",
      "FileEncodingName": "utf-8",
      "DateFormat": "yyyyMMdd",
      "CounterFormat": "000",
      "MaxFileSize": 1048576,
      "LogLevel": {
        "OCPP": "Trace",
        "Microsoft": "Warning",
        "Default": "Debug"
      },
      "IncludeScopes": false,
      "MaxQueueSize": 10,
      "Files": [
        {
          "Path": "OCPP.Core.Server-<counter>.log",
          "CounterFormat": "00"
        }
      ]
    }
  },

  "LogLevel": {
    "Default": "Information"
  },

  "ConnectionStrings": {
    //"SQLite": "Filename=.\\..\\SQLite\\OCPP.Core.sqlite;"
    "SqlServer": "Server=.;Database=OCPP.Core;Trusted_Connection=True;"
  },

  "MessageDumpDir": "c:\\temp\\OCPP",
  "DbMessageLog": true,

  "AllowedHosts": "*"
}
